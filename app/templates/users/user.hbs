{{page-title 'User'}}
<div class="container has-text-centered">
  <div class="column is-3 is-offset-4">

    <LinkTo @route="users">
      <button data-test-id="go-to-back" class="button mb-2" type="button">
        Back to users
      </button>
    </LinkTo>

    <div class="user-profile">

      <figure class="avatar">
        <img src={{@model.image}} width="256px" alt="User" />
      </figure>

      <p class="title has-text-white my-2" data-test-id="title">
        {{@model.name}}
      </p>

      <p class="subtitle has-text-white my-2">
        Example Value:
        {{if @model.value @model.value "Empty"}}
      </p>

      <ArchivedStatus
        @model={{model}}
      />

    </div>
  </div>
</div>
{{outlet}}
